    "npm-publish-beta": "lerna publish from-package --no-git-reset --yes --dist-tag beta"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.7",
    "@types/glob": "^7.1.3",
    "@types/uuid": "^8.3.0",
    "@types/node": "^14.14.14",
    "lerna": "^3.22.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@katalon/testops-commons": "0.0.1-beta.12"
  }
}
